{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators":true,
    "lib": ["es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2016",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}

